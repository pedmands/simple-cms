<% @page_title = @page.name %>

<h2><%= @page.name %></h2>

<% @page.sections.visible.sorted.each do |section| %>
  <div class="section">
    <% case section.content_type %>
    <% when 'HTML' %>
      <%= raw(sanitize(section.content, :tags => ['strong', 'em', 'a', 'br', 'h1', 'h2', 'ul', 'li'])) %>
    <% when 'text' %>
      <p><%= section.content %></p>
    <% end %>
  </div>
<% end %>
