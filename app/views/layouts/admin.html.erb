<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS | <%= @page_title || "Admin" %></title>
		<%= stylesheet_link_tag('application', :media => 'all') %>
 
  </head>
  <body>
    <div id="header">
      <h1><%= link_to("Simple CMS Admin", {:controller => 'access', :action => 'index'}, :class => 'back-link') %></h1>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; Preston Edmands</p>
    </div>
  </body>
</html>
